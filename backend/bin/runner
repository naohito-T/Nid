#!/usr/bin/env bash
set -eu pipefail

# --------------------------
# Backend launch Scripts.
# --------------------------

# dev
# migration
# seeds

# log load
. ./bin/info

if [[ "${NODE_ENV}" == "local" || "${NODE_ENV}" == "development" ]]; then
    # TODO migrationを入れる。
    info 'Dev app initialized.' \
    && . ./bin/aws-local-kit \
    && yarn dev
else
    info 'Dev app initialized.'
    echo 'Prd app initialized.'
    yarn dev
fi
